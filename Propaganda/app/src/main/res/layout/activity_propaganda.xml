<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    tools:context=".Propaganda"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/txtProp2"
        android:layout_width="173dp"
        android:layout_height="217dp"
        android:layout_marginBottom="57dp"
        android:text="Nossa empresa trabalha com chocolates!"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnVoltarProp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNome2" />

    <Button
        android:id="@+id/btnVoltarProp"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="47dp"
        android:text="VOLTAR PARA O MENU"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtProp2" />

    <TextView
        android:id="@+id/txtNome2"
        android:layout_width="212dp"
        android:layout_height="80dp"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="31dp"
        android:text="ChocoFeliz"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtProp2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />
</android.support.constraint.ConstraintLayout>