<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fc1111"
    tools:context=".Menu"
    tools:layout_editor_absoluteY="81dp">

    <Button
        android:id="@+id/btnSobEmp"
        android:layout_width="221dp"
        android:layout_height="0dp"
        android:layout_marginBottom="99dp"
        android:text="SOBRE A EMPRESA"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnTel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtNome" />

    <Button
        android:id="@+id/btnTel"
        android:layout_width="124dp"
        android:layout_height="0dp"
        android:layout_marginBottom="80dp"
        android:text="TELEFONE"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSobEmp" />

    <TextView
        android:id="@+id/txtNome"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_marginBottom="77dp"
        android:layout_marginTop="45dp"
        android:text="ChocoFeliz"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btnSobEmp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>